<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Properties>
        <Property name="pattern1">%p %d{HH:mm:ss,SSS} [%t] %C: %m%n</Property>
        <Property name="pattern2">%style{[%d{HH:mm:ss.SSS}]}{cyan} - %highlight{%m}{FATAL=red blink, ERROR=red,
            WARN=yellow bold, INFO=white, DEBUG=green bold, TRACE=blue} [%25.25c{1}:%-4L] [%-5level]%n
        </Property>
        <Property name="pattern5">[%-5level] [%d{HH:mm:ss.SSS}] [%25.25t] [%25.25c{1}:%-4L] - %m%n</Property>
        <Property name="logLevel">debug</Property>
        <Property name="logLevelSpring">info</Property>
        <Property name="logLevelSpringSecurity">info</Property>
        <Property name="logLevelRoot">warn</Property>
    </Properties>

    <Appenders>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern2}"/>
        </Console>

    </Appenders>


    <Loggers>

        <!-- main log -->
        <Logger name="com.mixram.telegram.microservices.plasticupdater" level="${logLevel}" includeLocation="true"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <!-- spring log -->
        <Logger name="org.springframework" level="${logLevelSpring}" includeLocation="true" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="org.springframework.security" level="${logLevelSpringSecurity}" includeLocation="true"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Root level="${logLevelRoot}" includeLocation="true">
            <AppenderRef ref="STDOUT"/>
        </Root>

    </Loggers>

</Configuration>

